{{!-- {{#each this}} --}}

<img
  class='card__flag'
  src='{{flags.svg}}'
  alt='{{name.official}}'
  width='100'
  height='50'
/>
<h1>
  {{name.official}}
</h1>
<ul class='country-info_list'>
  <li class='country-info_item'>
    <h2>Capital:</h2>
    <p class='card__info'>{{capital}}</p>
  </li>
  <li class='country-info_item'>
    <h2>Population:</h2>
    <p class='card__info'>{{population}} peoples</p>
  </li>
  <li class='country-info_item'>
    <h2>Maps:</h2>
    <p class='card__info'>
      <a
        href='{{maps.googleMaps}}'
        class='card__info'
        target='_blank'
      >{{maps.googleMaps}}</a>
    </p>

  </li>
  <li class='country-info_item'>
    <h2>Languages:</h2>

    <p class='card__info'>
      {{#each this.languages}}
        <span class='card__info'>{{this}}</span>
      {{/each}}
    </p>
  </li>

</ul>

<div class='btn'>
  <button class='card__button'>Більше інформації</button>
  <button class='card__button2'>Pixabey images</button>
</div>

{{!-- {{/each}} --}}